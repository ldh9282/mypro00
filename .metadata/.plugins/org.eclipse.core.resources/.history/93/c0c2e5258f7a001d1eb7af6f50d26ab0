<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <!-- DAO 대신 매퍼인터페이스를 사용하는 경우, 
      namespace 속성에 패키지이름이 포함된 인터페이스이름을 설정합니다-->
<mapper namespace="com.spring.mypro00.mapper.MyMemberMapper">
	<resultMap type="com.spring5218.mypro00.domain.MyAuthorityVO" id="authorityMap">
		<result property="userid" column="userid"/>
		<result property="authority" column="authority"/>
	</resultMap>

	<resultMap type="com.spring.mypro00.domain.MyMemberVO" id="memberMap">
		<result property="userid" column="userid"/>
		<result property="userpw" column="userpw"/>
		<result property="userName" column="username"/>
		<result property="mregDate" column="mregdate"/>
		<result property="mmodDate" column="mmoddate"/>
		<result property="mdropFlg" column="mdropflg"/>
		<result property="enabled" column="enabled"/>
		
		<collection property="authorityList" resultMap="authorityMap" />
	</resultMap>
	
	<!-- 회원 및 회원의 권한 리스트 조회 -->
	<select id="selectMyMember" resultMap="memberMap">
		SELECT 
		    mem.userid, mem.userpw, mem.username, mem.enabled,
		    mem.mregdate, mem.mmoddate, mem.mdropflg, auth.authority
		FROM book_ex.tbl_mymember mem
		INNER JOIN book_ex.tbl_mymember_authorities auth
		ON mem.userid = auth.userid
		WHERE mem.userid = #{userid}
	
	</select>
	
	<!-- 회원 추가 -->	
	<insert id="insertMyMember">
		INSERT INTO book_ex.tbl_mymember
		VALUES (#{userid}, #{userpw}, #{userName}, DEFAULT, DEFAULT, DEFAULT, DEFAULT)
	</insert>

	<!-- 회원 권한 추가 -->
	<insert id="">
		INSERT INTO book_ex.tbl_mymember_authorities
		VALUES (#{userid}, #{authority})
	</insert>
</mapper>